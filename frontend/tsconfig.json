{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "allowJs": false,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false, // Need emitted files for webpack
    "sourceMap": true,
    "jsx": "react"
  },
  "include": ["src"]
}
